# Environment Variables Template
# Copy this file to .env and fill in the values

# NextAuth Configuration
# For production: use your actual domain (e.g., https://your-domain.com)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# Google OAuth
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# MongoDB
# Get this from: https://www.mongodb.com/cloud/atlas
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/olym-pose

# AI Service URLs
# For local development
NEXT_PUBLIC_AI_SERVICE_URL=http://localhost:8001
# For production (through Caddy reverse proxy)
# NEXT_PUBLIC_AI_SERVICE_URL=https://your-domain.com/api

# Application Settings
APP_ENV=development
NEXT_PUBLIC_APP_NAME=Olym Pose

# Legacy JWT Secrets (optional - only if using custom email/password auth)
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d
